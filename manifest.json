{
	  "name": "XKCD Substitutor",
	  "description": "Changes words on the page based on XKCD comics",
	  "version": "2.0",
	  "permissions": [
	    "activeTab"
	  ],
	  "background": {
	    "scripts": ["substitute.js"],
	    "persistent": false
	  },
	  "browser_action": {
	    "default_title": "Make this page red"
	  },
	  "manifest_version": 2
}